# Auth Service (Django REST Framework) Environment Variables
# Copy to .env.dev or .env.prod and fill in values

# Database Configuration
POSTGRES_DB=united_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# JWT Configuration (MUST match blog-service)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Auth Service (DRF)
AUTH_SERVICE_DEBUG=True
AUTH_SERVICE_SECRET_KEY=your_django_secret_key_here
AUTH_SERVICE_ALLOWED_HOSTS=localhost,127.0.0.1,auth-service

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://frontend:5173
