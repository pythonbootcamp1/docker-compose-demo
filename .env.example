# Database Configuration
POSTGRES_DB=united_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# JWT Configuration (MUST be same for auth-service and blog-service)
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Auth Service (DRF)
AUTH_SERVICE_DEBUG=True
AUTH_SERVICE_SECRET_KEY=your_django_secret_key_here
AUTH_SERVICE_ALLOWED_HOSTS=localhost,127.0.0.1

# Blog Service (FastAPI)
BLOG_SERVICE_DEBUG=True

# Frontend
VITE_AUTH_API_URL=http://localhost:8000
VITE_BLOG_API_URL=http://localhost:8001

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
